{
  "extends": "next/core-web-vitals",
  "plugins": ["@typescript-eslint", "simple-import-sort"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "import/no-unresolved": "error", // Enforce import/no-unresolved
    "import/named": "error", // Enforce import/named
    "simple-import-sort/imports": "warn",
    "simple-import-sort/exports": "warn"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "ignorePatterns": ["!.lintstagedrc.js", ".next", "node_modules"]
}
